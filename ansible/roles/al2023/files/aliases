
alias php-fpm.start='echo "starting php-fpm..."; sudo systemctl start php-fpm'
alias php-fpm.stop='echo "stopping php-fpm..."; sudo systemctl stop php-fpm'
alias php-fpm.restart='echo "restarting php-fpm..."; sudo systemctl restart php-fpm'
alias php-fpm.status='systemctl status php-fpm'

alias nginx.start='echo "starting nginx..."; sudo systemctl start nginx'
alias nginx.stop='echo "stopping nginx..."; sudo systemctl stop nginx'
alias nginx.restart='echo "restarting nginx..."; sudo nginx -s reload'
alias nginx.status='systemctl status nginx'

alias nginx.logs.error='tail -250f /usr/local/etc/nginx/logs/error.log'
alias nginx.logs.access='tail -250f /usr/local/etc/nginx/logs/access.log'
alias nginx.logs.default.access='tail -250f /usr/local/etc/nginx/logs/default.access.log'
alias nginx.logs.default-ssl.access='tail -250f /usr/local/etc/nginx/logs/default-ssl.access.log'
alias nginx.logs.phpmyadmin.error='tail -250f /usr/local/etc/nginx/logs/phpmyadmin.error.log'
alias nginx.logs.phpmyadmin.access='tail -250f /usr/local/etc/nginx/logs/phpmyadmin.access.log'

# Checking what directories and files are eating your precious disk space is invaluable too, and sorting the output
alias duf='du -skh .[!.]* * | sort -h'

# To generate a UUID (universally unique identifier) quickly:
alias uuid="python -c 'import sys,uuid; sys.stdout.write(uuid.uuid4().hex)' | pbcopy && pbpaste && echo"

###
# Global aliases file (~/.aliases)
###

alias gc='git clone git@gitlab.com:devap/$1'
alias gpom='git push origin master'
alias catgit='cat ./.git/config'
alias gcat='catgit'

#for fat fingers...
alias pi='pip '
alias ecoh='echo'
alias grpe='grep '

# git aliases
alias gits="git status"
alias gitpo="git push -u origin master"
alias gitc="git commit "

#utility aliases
alias bgc="bgcolors"
alias cls="clear"
alias clr="clear"

alias la="ls -la"
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias curdate='date +"%d-%m-%Y"'

alias ssh="TERM=xterm-256color ssh"

### important safety nets
alias ln='ln -s'
alias md='mkdir'
alias pse='ps -ef'
alias rd='rm -rfi'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias grep='grep -i --color=auto '

alias tailf='tail -f'
alias tf='tailf'
alias tfl='tail -f /var/log/messages'
alias tfm='tail -f /var/log/messages'
alias tfmsg='tail -f /var/log/messages'
alias tfmail='tail -f /var/log/maillog'
alias ur='uname -r'

# IP addresses
alias myip="curl icanhazip.com"  # Your public IP address
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Recursively delete `.DS_Store` files
alias rmstore="find . -type f -name '*.DS_Store' -ls -delete"

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

